{
  "name": "Lucky Bookmark",
  "version": "1.0",
  "description": "Get a random/lucky bookmark.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "backgroundOpenRandomBookmark.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
        "16": "images/clover16.png",
        "32": "images/clover32.png",
        "48": "images/clover64.png",
        "128": "images/clover128.png"
      }
  },
  "icons": {
      "16": "images/clover16.png",
      "32": "images/clover32.png",
      "48": "images/clover64.png",
      "128": "images/clover128.png"
    },
  "permissions": [
    "bookmarks"
  ]
}
